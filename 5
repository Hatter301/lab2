#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    double x1,y1,x2,y2,x3,y3,s,p,c1,c2,c3;
    cin>>x1>>y1>>x2>>y2>>x3>>y3;
    c1=sqrt((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1));
    c2=sqrt((x3-x2)*(x3-x2)+(y3-y2)*(y3-y2));
    c3=sqrt((x3-x1)*(x3-x1)+(y3-y1)*(y3-y1));
    p=c1+c2+c3;
    s=sqrt(p*(p-c1)*(p-c2)*(p-c3));
    cout<<p<<" "<<s;
    return 0;
}
